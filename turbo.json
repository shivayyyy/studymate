{
    "$schema": "https://turborepo.dev/schema.json",
    "globalDependencies": [
        "tsconfig.json"
    ],
    "globalEnv": [
        "NODE_ENV"
    ],
    "ui": "tui",
    "tasks": {
        "build": {
            "dependsOn": [
                "^build"
            ],
            "outputs": [
                "dist/**"
            ],
            "env": [
                "MONGODB_URI",
                "REDIS_URL"
            ]
        },
        "dev": {
            "cache": false,
            "persistent": true,
            "interactive": true
        },
        "lint": {
            "outputs": []
        },
        "test": {
            "dependsOn": [
                "build"
            ],
            "outputs": [
                "coverage/**"
            ],
            "inputs": [
                "src/**/*.ts",
                "tests/**/*.ts"
            ]
        },
        "clean": {
            "cache": false
        }
    }
}